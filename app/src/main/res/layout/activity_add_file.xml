<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:ignore="ContentDescription,Autofill">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/picture_color_529BeA"
            app:srcCompat="@drawable/logo" />
    </androidx.cardview.widget.CardView>
    
    
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView">
    
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_extra_large">
        
            <RelativeLayout
                android:id="@+id/rl_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            
            
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sw_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/yekan"
                    android:minHeight="48dp"
                    android:text="@string/offer"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>
        
            <RelativeLayout
                android:id="@+id/rl_sold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_offer">
            
            
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sw_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/yekan"
                    android:minHeight="48dp"
                    android:text="@string/sold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>
        
            <RelativeLayout
                android:id="@+id/rl_file_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_sold">
            
                <TextView
                    android:id="@+id/tv_label_file_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/yekan"
                    android:labelFor="@id/et_file_code"
                    android:text="@string/file_code"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary" />
            
                <EditText
                    android:id="@+id/et_file_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_label_file_code"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:minHeight="48dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/textSecondaryColor" />
            </RelativeLayout>
        
            <RelativeLayout
                android:id="@+id/rl_file_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_file_code">
            
                <TextView
                    android:id="@+id/tv_label_file_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/yekan"
                    android:labelFor="@id/et_file_title"
                    android:text="@string/file_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary" />
            
                <EditText
                    android:id="@+id/et_file_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_label_file_title"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/textSecondaryColor" />
            </RelativeLayout>
        
            <RelativeLayout
                android:id="@+id/rl_file_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_file_title">
            
                <TextView
                    android:id="@+id/tv_label_file_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/yekan"
                    android:labelFor="@id/et_file_text"
                    android:text="@string/file_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary" />
            
                <EditText
                    android:id="@+id/et_file_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_label_file_text"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="10"
                    android:textColor="@color/textSecondaryColor" />
            </RelativeLayout>
        
            <RelativeLayout
                android:id="@+id/rl_price_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_file_text">
            
                <TextView
                    android:id="@+id/tv_label_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/yekan"
                    android:labelFor="@id/et_price_title"
                    android:text="@string/price_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary" />
            
                <EditText
                    android:id="@+id/et_price_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_label_price_title"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/textSecondaryColor" />
            </RelativeLayout>
        
            <RelativeLayout
                android:id="@+id/rl_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_price_title">
            
                <TextView
                    android:id="@+id/tv_label_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/yekan"
                    android:labelFor="@id/et_price"
                    android:text="@string/price"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary" />
            
                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_label_price"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/textSecondaryColor" />
            </RelativeLayout>
        
            <RelativeLayout
                android:id="@+id/rl_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_price">
            
                <TextView
                    android:id="@+id/tv_label_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/yekan"
                    android:labelFor="@id/et_area"
                    android:text="@string/area"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary" />
            
                <EditText
                    android:id="@+id/et_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_label_area"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/textSecondaryColor" />
            </RelativeLayout>
        
            <RelativeLayout
                android:id="@+id/rl_file_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_area">
            
                <TextView
                    android:id="@+id/tv_label_file_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/yekan"
                    android:labelFor="@id/et_file_details"
                    android:text="@string/file_details"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary" />
            
                <EditText
                    android:id="@+id/et_file_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_label_file_details"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="15"
                    android:textColor="@color/textSecondaryColor" />
            </RelativeLayout>
        
            <RelativeLayout
                android:id="@+id/rl_file_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_file_details">
            
                <TextView
                    android:id="@+id/tv_label_file_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/yekan"
                    android:text="@string/file_picture"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary" />
            
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_label_file_picture"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium">
    
                    <ImageView
                        android:id="@+id/iv_file_picture"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@android:color/darker_gray"
                        android:scaleType="fitXY" />
    
                    <ImageView
                        android:id="@+id/iv_rotate_image_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_file_picture"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="7dp"
                        android:background="@drawable/round_corner_bg"
                        android:backgroundTint="@color/overlayText"
                        app:srcCompat="@drawable/ic_baseline_rotate_left_24"
                        app:tint="@color/app_bg" />
    
                    <ImageView
                        android:id="@+id/iv_rotate_image_original"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="7dp"
                        android:layout_toRightOf="@id/iv_rotate_image_left"
                        android:background="@drawable/round_corner_bg"
                        android:backgroundTint="@color/overlayText"
                        app:srcCompat="@drawable/ic_baseline_swap_vert_24"
                        app:tint="@color/app_bg" />
    
                    <ImageView
                        android:id="@+id/iv_rotate_image_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="7dp"
                        android:layout_toRightOf="@id/iv_rotate_image_original"
                        android:background="@drawable/round_corner_bg"
                        android:backgroundTint="@color/overlayText"
                        app:srcCompat="@drawable/ic_baseline_rotate_right_24"
                        app:tint="@color/app_bg" />
    
                    <Button
                        android:id="@+id/btn_select_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_file_picture"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:elevation="2dp"
                        android:fontFamily="@font/yekan"
                        android:text="@string/select_image"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/textSecondaryColor" />
            
                </RelativeLayout>
            </RelativeLayout>
    
            <RelativeLayout
                android:id="@+id/rl_file_hidden_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_file_picture">
        
                <TextView
                    android:id="@+id/tv_label_file_hidden_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/yekan"
                    android:labelFor="@id/et_file_details"
                    android:text="@string/file_hidden_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary" />
        
                <EditText
                    android:id="@+id/et_file_hidden_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_label_file_hidden_text"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="15"
                    android:textColor="@color/textSecondaryColor" />
            </RelativeLayout>
    
            <Button
                android:id="@+id/btn_send_add_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_file_hidden_text"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="2dp"
                android:fontFamily="@font/yekan"
                android:text="@string/send"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/textSecondaryColor" />

        </RelativeLayout>
    
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
