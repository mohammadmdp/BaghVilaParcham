<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription,RtlHardcoded">
    
    
    <RelativeLayout
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/round_corner_bg"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <RelativeLayout
            android:id="@+id/rl_image_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    
            <ImageView
                android:id="@+id/iv_image_new"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/darker_gray"
                android:elevation="4dp" />
        </RelativeLayout>
    
        <ImageView
            android:id="@+id/iv_rotate_image_new_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rl_image_new"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/round_corner_bg"
            android:backgroundTint="@android:color/black"
            app:srcCompat="@drawable/ic_baseline_rotate_left_24"
            app:tint="@color/colorPrimary" />
    
        <ImageView
            android:id="@+id/iv_rotate_image_new_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rl_image_new"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="7dp"
            android:layout_toRightOf="@id/iv_rotate_image_new_left"
            android:background="@drawable/round_corner_bg"
            android:backgroundTint="@android:color/black"
            app:srcCompat="@drawable/ic_baseline_swap_vert_24"
            app:tint="@color/colorPrimary" />
    
        <ImageView
            android:id="@+id/iv_rotate_image_new_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rl_image_new"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="7dp"
            android:layout_toRightOf="@id/iv_rotate_image_new_original"
            android:background="@drawable/round_corner_bg"
            android:backgroundTint="@android:color/black"
            app:srcCompat="@drawable/ic_baseline_rotate_right_24"
            app:tint="@color/colorPrimary" />
    
        <ImageView
            android:id="@+id/iv_remove_new_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rl_image_new"
            android:layout_alignParentRight="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/round_corner_bg"
            android:backgroundTint="@android:color/black"
            app:srcCompat="@drawable/ic_remove"
            app:tint="@color/colorPrimary" />
    </RelativeLayout>
    
</RelativeLayout>
