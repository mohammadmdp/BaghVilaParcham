<resources>
    
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/textSecondaryColor</item>
        <item name="colorPrimaryDark">@color/picture_color_529BeA</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:font">@font/is</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
    </style>
    
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="backgroundTint">#FBE02D</item>
        <item name="fontFamily">@font/yekan</item>
    </style>
    
    <style name="AppTheme.NegativeButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="backgroundTint">#AE0000</item>
        <item name="fontFamily">@font/yekan</item>
    </style>
    
    <style name="AppTheme.TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/yekan</item>
    </style>
    
    
</resources>
